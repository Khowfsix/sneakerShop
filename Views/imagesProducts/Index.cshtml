@model IEnumerable<WebApplication1.Models.imagesProduct>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product.productName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Product.productName)
        </td>
        <td>
            <img src="~/images/products/productsFromDB/" + @item.images />
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = @item.productId, image = @item.images }) |
            @Html.ActionLink("Details", "Details", new { id = @item.productId, image = @item.images }) |
            @Html.ActionLink("Delete", "Delete", new { id = @item.productId, image = @item.images })
        </td>
    </tr>
}

</table>
