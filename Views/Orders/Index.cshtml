@model IEnumerable<WebApplication1.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <td>
            ID đơn hàng
        </td>
        <th>
            Ngày đặt
        </th>
        <th>
            Trạng thái đơn hàng
        </th>
        <th>
            Vận chuyển
        </th>
        <th></th>
    </tr>

    @foreach (WebApplication1.Models.Order item in Model)
    {
        <tr>
            @if (item.orderDate.Value.Date == DateTime.Today.Date)
            {
                <td style="color: red">
                    @Html.DisplayFor(modelItem => item.orderID)
                </td>
                <td style="color: red">
                    @Html.DisplayFor(modelItem => item.orderDate)
                </td>
                <td style="color: red">
                    @Html.DisplayFor(modelItem => item.status)
                </td>
                <td style="color: red">
                    @Html.DisplayFor(modelItem => item.shipping)
                </td>
            }
            else
            {
                <td>
                    @Html.DisplayFor(modelItem => item.orderID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.orderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.shipping)
                </td>
            }
            <td>
                <input type="button" value="Sửa" onclick="location.href='@Url.Action("Edit", "Orders", new { id = item.orderID })'" />
            </td>
            <td>
                <input type="button" value="Chi tiết" onclick="location.href='@Url.Action("Details", "Orders", new { id = item.orderID })'" />
            </td>
            <td>
                <input type="button" value="Xóa" onclick="location.href='@Url.Action("Delete", "Orders", new { id = item.orderID })'" />
            </td>
        </tr>
    }

</table>
