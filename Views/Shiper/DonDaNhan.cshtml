@model IEnumerable<WebApplication1.Models.Order>
@{
    ViewBag.Title = "DonDaNhan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a href="/Shiper/DonHangChuaNhan"><button class="btn btn-primary">Nhận đơn hàng</button></a>
<table class="table">
    <tr>
        <th>
            OrderDate
        </th>
        <th>
            Status
        </th>
        <th>
            Shiping
        </th>
        <th>
            PaymentType
        </th>
        <th>
            TotalPay
        </th>
        <th>
            Address
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.orderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.shipping)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.paymentType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.totalPay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.address)
            </td>
            <td>
                <a href="/Shiper/DaGiao?orderId=@item.orderID"><button class="btn btn-primary">Đã giao hàng</button></a>
            </td>
        </tr>
    }

</table>



