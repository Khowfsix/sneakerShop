@model IEnumerable<WebApplication1.Models.Order>
@{
    ViewBag.Title = "DonHangChuaNhan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a href="/Shiper/DonDaNhan/?shiperId=1 "><button class="btn btn-primary">Đơn hàng đã nhận</button></a>
<table class="table">
    <tr>
        <th>
            OrderDate
        </th>
        <th>
            Status
        </th>
        <th>
            Shiping
        </th>
        <th>
            PaymentType
        </th>
        <th>
            TotalPay
        </th>
        <th>
            Address
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.status == 1)
        { continue; }
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.orderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.shipping)
            </td>
            @if (item.paymentType == 1)
            {


                <td>
                    Thanh toán khi nhận hàng
                </td>
            }
            else
            {
                <td>
                    Đã thanh toán
                </td>

            }
            <td>
                @Html.DisplayFor(modelItem => item.totalPay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.address)
            </td>
            <td>
                <a href="/Shiper/NhanGiao?orderId=@item.orderID"><button class="btn btn-primary">Nhận giao đơn hàng</button></a>
            </td>
        </tr>
    }

</table>


