@{
    Layout = null;
}
@model WebApplication1.ViewModel.FilterViewModel
@using PagedList.Mvc;

<div class="container">
    <div class="row">
        <aside class="col-md-3">

            <div class="card">
                <form action="@Url.Action("Filter", "AllProduct")" class="form-group" method="post">
                    <article class="filter-group">

                        <header class="card-header">
                            <a href="#" data-toggle="collapse" data-target="#collapse_1" aria-expanded="true" class="">
                                <i class="icon-control fa fa-chevron-down"></i>
                                <h6 class="title" style="margin-top: 2px">Sex</h6>
                            </a>
                        </header>
                        <div class="filter-content collapse show" id="collapse_1" style="">
                            <div class="card-body">


                                <ul class="list-menu">
                                    <li>
                                        <label class="custom-control custom-checkbox">
                                            <input type="checkbox" name="nam-Checkbox" value="Nam" checked="" class="custom-control-input">
                                            <div class="custom-control-label">
                                                Nam
                                            </div>
                                        </label>
                                        <label class="custom-control custom-checkbox">
                                            <input type="checkbox" name="nu-Checkbox" value="Nữ" checked="" class="custom-control-input">
                                            <div class="custom-control-label">
                                                Nữ
                                            </div>
                                        </label>
                                    </li>
                                </ul>
                            </div> <!-- card-body.// -->
                        </div>
                    </article>



                    <!-- filter-group  .// -->
                    <article class="filter-group">
                        <header class="card-header">
                            <a href="#" data-toggle="collapse" data-target="#collapse_2" aria-expanded="true" class="">
                                <i class="icon-control fa fa-chevron-down"></i>
                                <h6 class="title">Brands </h6>
                            </a>
                        </header>
                        <div class="filter-content collapse show" id="collapse_2" style="">
                            <div class="card-body">
                                @{
                                    foreach (var cate in Model.ProductViewModel.Categories)
                                    {

                                        <label class="custom-control custom-checkbox">
                                            <input type="checkbox" name="@cate.categoryName-Checkbox" value="@cate.categoryId" checked="" class="custom-control-input">
                                            <div class="custom-control-label">
                                                @cate.categoryName
                                                <b class="badge badge-pill badge-light float-right">@cate.Products.Count</b>
                                            </div>
                                        </label>

                                    }
                                }

                            </div> <!-- card-body.// -->
                        </div>
                    </article> <!-- filter-group .// -->
                    <article class="filter-group">
                        <header class="card-header">
                            <a href="#" data-toggle="collapse" data-target="#collapse_3" aria-expanded="true" class="">
                                <i class="icon-control fa fa-chevron-down"></i>
                                <h6 class="title">Price range </h6>
                            </a>
                        </header>
                        <div class="filter-content collapse show" id="collapse_3" style="">
                            <div class="card-body">
                                <input type="range" class="custom-range" min="0" max="100" name="">
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label>Min</label>
                                        <input class="form-control" placeholder="$0" type="number">
                                    </div>
                                    <div class="form-group text-right col-md-6">
                                        <label>Max</label>
                                        <input class="form-control" placeholder="$1,0000" type="number">
                                    </div>
                                </div> <!-- form-row.// -->

                            </div><!-- card-body.// -->
                        </div>
                    </article> <!-- filter-group .// -->
                    <article class="filter-group">
                        <header class="card-header">
                            <a href="#" data-toggle="collapse" data-target="#collapse_4" aria-expanded="true" class="">
                                <i class="icon-control fa fa-chevron-down"></i>
                                <h6 class="title">Sizes </h6>
                            </a>
                        </header>
                        <div class="filter-content collapse show" id="collapse_4" style="">
                            <div class="card-body">
                                <label class="checkbox-btn">
                                    <input type="checkbox" name="sizeCheckBox">
                                    <span class="btn btn-light"> XS </span>
                                </label>

                                <label class="checkbox-btn">
                                    <input type="checkbox" name="sizeCheckBox">
                                    <span class="btn btn-light"> SM </span>
                                </label>

                                <label class="checkbox-btn">
                                    <input type="checkbox" name="sizeCheckBox">
                                    <span class="btn btn-light"> LG </span>
                                </label>

                                <label class="checkbox-btn">
                                    <input type="checkbox" name="sizeCheckBox">
                                    <span class="btn btn-light"> XXL </span>
                                </label>
                                <button class="btn btn-block btn-primary">Apply</button>
                            </div><!-- card-body.// -->

                        </div>
                    </article> <!-- filter-group .// -->
                </form>

            </div> <!-- card.// -->

        </aside>
        <main class="col-md-9">

            <header class="border-bottom mb-4 pb-3">
                <div class="form-inline">
                    <div class="mr-md-auto" style="margin-top: 10px">
                        <span style="float:left; margin-top:17px"> Tên sản phẩm </span>
                        <div class="form-group" style="height:50px; ">
                            <form action="@Url.Action("Index", "AllProduct")" class="form-group" method="get">
                                <input type="text" style="width: 500px; margin-left:10px"
                                       value="@Model.ProductViewModel.SearchString"
                                       placeholder="Search" name="SearchString">

                            </form>
                        </div>


                    </div>

                    <span class="mr-md-auto" style="margin-left:100px"> Sorted By </span>
                    <select class="mr-2 form-control">
                        <option>Latest items</option>
                        <option>Trending</option>
                        <option>Most Popular</option>
                        <option>Cheapest</option>
                    </select>
                    <div class="btn-group">
                        <a href="#" class="btn btn-outline-secondary" data-toggle="tooltip" title="" data-original-title="List view">
                            <i class="fa fa-bars"></i>
                        </a>
                        <a href="#" class="btn  btn-outline-secondary active" data-toggle="tooltip" title="" data-original-title="Grid view">
                            <i class="fa fa-th"></i>
                        </a>
                    </div>
                </div>
            </header><!-- sect-heading -->

            <div class="row">
                @{ foreach (var product in Model.ProductViewModel.ProductPagedList)
                    {


                        <div class="col-md-4">
                            <figure class="card card-product-grid" style="height:350px">
                                <div class="img-wrap" style="height:250px; display:flex">
                                    <!-- <span class="badge badge-danger"> NEW </span> -->
                                    @if (product.imagesProducts.Count != 0)
                                    {
                                        <img src="~/images/products/productsFromDB/@product.imagesProducts.FirstOrDefault().images" class="img-fluid" style="margin-top:auto; margin-bottom:auto">
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("productDetail", "Home", new { productID = @product.productId })" class="prod-img">
                                            <img class="img-fluid" alt="Free html5 bootstrap 4 template">
                                        </a>
                                    }
                                    <a class="btn-overlay" href="@Url.Action("productDetail","Home", new {productID = product.productId})"><i class="fa fa-search-plus"></i> Quick view</a>
                                </div> <!-- img-wrap.// -->
                                <figcaption class="info-wrap">
                                    <div class="fix-height">
                                        <a href="#" class="title">@product.productName</a>
                                        <div class="price-wrap mt-2">
                                            <span class="price">$ @product.price</span>
                                            <!-- <del class="price-old">$1980</del> -->
                                        </div> <!-- price-wrap.// -->
                                    </div>
                                    <a href="#" class="btn btn-block btn-primary">Add to cart </a>
                                </figcaption>
                            </figure>
                        </div> <!-- col.// -->
                    }

                }
            </div> <!-- row end.// -->
            Trang @(Model.ProductViewModel.ProductPagedList.PageCount < Model.ProductViewModel.ProductPagedList.PageNumber ? 0 : Model.ProductViewModel.ProductPagedList.PageNumber) / @Model.ProductViewModel.ProductPagedList.PageCount

            @Html.PagedListPager(Model.ProductViewModel.ProductPagedList, page => Url.Action("Index", new { page, Model.ProductViewModel.SearchString }))
            <!-- Kết thúc -->

        </main>
    </div>
</div>

